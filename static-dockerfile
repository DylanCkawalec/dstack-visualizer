# Static TEE Dashboard with API
FROM nginx:alpine

# Copy static HTML
COPY static-tee-dashboard.html /usr/share/nginx/html/index.html

# Copy nginx config
COPY nginx-proxy.conf /etc/nginx/conf.d/default.conf

# Copy API server
COPY ultra-simple-api.py /app/
RUN apk add --no-cache python3

# Create startup script
RUN echo '#!/bin/sh' > /start.sh && \
    echo 'python3 /app/ultra-simple-api.py &' >> /start.sh && \
    echo 'nginx -g "daemon off;"' >> /start.sh && \
    chmod +x /start.sh

EXPOSE 3000
ENV PORT=3000

CMD ["/start.sh"]
